{
  "manifest_version": 3,
  "name": "PrairieLearn Tracker",
  "description": "Track upcoming PrairieLearn assessments across enrolled courses.",
  "version": "1.0.1",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://*.prairielearn.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.prairielearn.com/*"
      ],
      "js": [
        "home-content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "PrairieLearn Tracker",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }        
}
